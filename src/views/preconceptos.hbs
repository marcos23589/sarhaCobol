    <div class="row align-items-start">
      <div class="col">
        <div class="card">
          <div class="card-body">
            {{#each res1}}
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value={{cobol}} id="cobol" name="cobol" >
              <label class="form-check-label" for="{{cobol}}">
                {{sarha}} ({{cobol}}) - {{denominacion}}
