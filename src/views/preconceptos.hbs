              <input class="form-check-input" type="checkbox" value={{cobol}} id="cobol" name="cobol" >
              <label class="form-check-label" for="{{cobol}}">
                {{sarha}} ({{cobol}}) - {{denominacion}}
              </label>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card">
          <div class="card-body">
            {{#each res3}}
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value={{cobol}} id="cobol" name="cobol" >
              <label class="form-check-label" for="{{cobol}}">
                {{sarha}} ({{cobol}}) - {{denominacion}}
              </label>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
    <div class="d-grid gap-2 col-3 mx-auto pt-3">
      <button class="btn btn-primary" type="submit">Enviar</button>
    </div>
</form>